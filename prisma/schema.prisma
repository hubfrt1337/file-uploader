generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())
  email String @unique 
  hash_password String
  folders Folder[]
}

model Session {
  id String @id
  sid String @unique
  data String @default("")
  expiresAt DateTime
}

model Folder {
  id Int @id @default(autoincrement())
  name String 
  userId Int
  user User @relation(fields: [userId], references: [id])
  created_at DateTime @default(now())
  files File[]

}
model File {
  id Int @id @default(autoincrement())
  name String
  url String
  folder Folder @relation(fields: [folderId], references: [id])
  folderId Int
  created_at DateTime @default(now())
}